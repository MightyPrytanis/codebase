# Cyrano Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# AI PROVIDERS (Required)
# =============================================================================

# Perplexity (Default orchestrator - real-time research and web data)
PERPLEXITY_API_KEY=pplx-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Get your key at: https://www.perplexity.ai/settings/api

# OpenAI GPT (Auto-assigned by task - general purpose, code generation)
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Get your key at: https://platform.openai.com/api-keys

# Anthropic Claude (Auto-assigned by task - safety-critical analysis)
ANTHROPIC_API_KEY=sk-ant-api03-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Get your key at: https://console.anthropic.com/

# Google Gemini (Long-context analysis, document processing)
GEMINI_API_KEY=AIzaSyXxxxxxxxxxxxxxxxxxxxxxxxxxxx  # nosemgrep: generic.secrets.security.detected-generic-api-key.detected-generic-api-key
# Get your key at: https://makersuite.google.com/app/apikey

# xAI Grok (Direct analysis, X data access)
XAI_API_KEY=xai-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Get your key at: https://console.x.ai/

# DeepSeek (Comprehensive analysis, code generation)
DEEPSEEK_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Get your key at: https://platform.deepseek.com/

# Cohere (Optional - NLP and embeddings)
COHERE_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Get your key at: https://dashboard.cohere.com/api-keys

# =============================================================================
# GOOGLE APIS (Optional)
# =============================================================================

# Google API Key (For Google services other than Gemini)
GOOGLE_API_KEY=AIzaSyXxxxxxxxxxxxxxxxxxxxxxxxxxxx  # nosemgrep: generic.secrets.security.detected-generic-api-key.detected-generic-api-key

# Google OAuth (For user authentication)
GOOGLE_OAUTH_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxx.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_SECRET=GOCSPX-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Set up OAuth at: https://console.cloud.google.com/apis/credentials

# =============================================================================
# SERVER CONFIGURATION (Required)
# =============================================================================

# Server port
PORT=5002

# Node environment (development | production | test)
NODE_ENV=development

# Log level (debug | info | warn | error)
LOG_LEVEL=info

# =============================================================================
# DATABASE (Required)
# =============================================================================

# PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/cyrano

# SQLite (Development)
DATABASE_URL=sqlite:./database.sqlite

# =============================================================================
# AUTHENTICATION (Required for production)
# =============================================================================

# JWT Secret (Generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Expiration (e.g., 7d, 24h, 60m)
JWT_EXPIRATION=7d

# =============================================================================
# EXTERNAL INTEGRATIONS (Optional)
# =============================================================================

# Clio Legal Practice Management
CLIO_CLIENT_ID=
CLIO_CLIENT_SECRET=
CLIO_REDIRECT_URI=http://localhost:5002/auth/clio/callback

# CourtListener API (Free legal case database)
COURTLISTENER_API_KEY=
# Get your key at: https://www.courtlistener.com/api/

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================

# Enable specific providers (true | false)
ENABLE_GEMINI=true
ENABLE_XAI=true
ENABLE_DEEPSEEK=true

# Enable experimental features
ENABLE_OCR=false
ENABLE_MULTI_LANGUAGE=false

# =============================================================================
# RATE LIMITING (Optional)
# =============================================================================

# Max requests per minute per user
RATE_LIMIT_RPM=60

# Max tokens per request
MAX_TOKENS_PER_REQUEST=100000

# =============================================================================
# ARKIVER CONFIGURATION (Optional)
# =============================================================================

# Arkiver database location
ARKIVER_DB_PATH=./arkiver.sqlite

# Max file size for processing (in MB)
MAX_FILE_SIZE_MB=50

# Supported file types (comma-separated)
SUPPORTED_FILE_TYPES=pdf,docx,txt,eml,html

# =============================================================================
# TELEMETRY & MONITORING (Optional)
# =============================================================================

# Enable telemetry (true | false)
ENABLE_TELEMETRY=true

# Sentry DSN (Error tracking)
SENTRY_DSN=

# DataDog API Key (Metrics and logging)
DATADOG_API_KEY=

# =============================================================================
# REDIS (Optional - for job queues and caching)
# =============================================================================

REDIS_URL=redis://localhost:6379

# =============================================================================
# SMTP/EMAIL (Optional - for notifications)
# =============================================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@cyrano.ai

# =============================================================================
# CORS (Optional - for web clients)
# =============================================================================

ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# DEVELOPMENT TOOLS (Development only)
# =============================================================================

# Enable debug mode
DEBUG=false

# Enable detailed logging
VERBOSE_LOGGING=false

# Skip authentication (development only - NEVER in production)
SKIP_AUTH=false

# =============================================================================
# NOTES
# =============================================================================
# 
# REQUIRED for Beta:
# - AI provider keys (at least ANTHROPIC_API_KEY, OPENAI_API_KEY, GEMINI_API_KEY)
# - DATABASE_URL
# - JWT_SECRET
# - PORT
#
# RECOMMENDED:
# - All provider keys (PERPLEXITY, XAI, DEEPSEEK) for full fallback chain
# - GOOGLE_OAUTH_* for user authentication
# - LOG_LEVEL=info for production
#
# OPTIONAL:
# - CLIO_* for Clio integration
# - COURTLISTENER_API_KEY for case law lookups
# - REDIS_URL for job queues (not needed for Beta)
# - SMTP_* for email notifications
# - Telemetry/monitoring keys
#
# SECURITY:
# - NEVER commit .env to version control
# - Use strong, unique JWT_SECRET
# - Rotate API keys regularly
# - Use environment-specific .env files (.env.production, .env.staging)
#
